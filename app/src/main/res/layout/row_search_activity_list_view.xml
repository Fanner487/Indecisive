<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageButton
        android:src="@mipmap/edit_button"
        android:background="@drawable/rounded_corner"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/row_margin_left_start"
        android:layout_marginEnd="@dimen/row_margin_left_start"
        android:layout_centerVertical="true"
        android:id="@+id/adapter_search_list_btn_edit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_row_height"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/app_font_colour"
        android:id="@+id/adapter_search_list_tv_search"
        android:gravity="center_vertical"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        />

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/adapter_search_list_image_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>